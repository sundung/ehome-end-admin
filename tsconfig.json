{
  "compilerOptions": {
    "typeRoots": [
        "node_modules/@types", // 默认值
        "src/types"
     ],
     "baseUrl": ".",
     "paths": {
      "@/*": [ "src/*" ],
    },
    "types": ["element-plus/global"],
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "shim.d.ts", "vite.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
